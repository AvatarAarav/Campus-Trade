    <script>
        let id = '<%-ad.id%>'
        fetch('http://localhost:3000/api/adImage/' + id).then(response => {
            if (response.ok) {
                return response.json();
            }
            throw new Error('Network response was not ok.');
        })
            .then(({ad}) => {
                // Call createAdCards function to create ad cards on page load
                console.log(ad)
                const image=document.getElementById("ad-photo")
                // console.log(image)
                image.src=`data:${ad.img_type};base64,${btoa(String.fromCharCode.apply(null,ad.img_content.data))}`
                // console.log('done')
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
