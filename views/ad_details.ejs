    <style>
        /* Navbar styles */
        
         :root {
            --blue1: #142850;
            --blue2: #27496D;
            --blue3: #0C7B93;
            --blue4: #00A8CC;
            --bisket: rgb(251, 218, 174);
            --yello: #F1F7B5;
            --redd: #FD8A8A;
        }
        
        .navbar {
            background-color: var(--blue1);
        }
        
        .nav-item a:hover {
            color: orange;
        }
        
        .logo {
            font-size: 40px;
            color: white;
            padding: 0px;
            margin: 0px 5px 0px -20px;
        }
        
        .heading {
            padding: 0px;
            margin: 0px 10px -15px 5px;
            color: white;
            /* background-color: red; */
        }
        
        .heading h2 {
            margin: 0px;
            padding: 0px;
            color: var(--blue4);
            font-weight: 700;
        }
        
        .heading p {
            margin: 0px;
            padding: 0px;
            font-size: 13px;
            color: lightcyan;
        }
        
        .searchbar {
            background-color: var(--blue1);
        }
        
        .inpsearch {
            width: 90%;
            padding-left: 20px;
            border: none;
            border-top-left-radius: 15px;
            border-bottom-left-radius: 15px;
        }
        
        .inpsearch:focus {
            outline: none;
        }
        
        .searchbtn {
            width: 35px;
            height: 35px;
            background-color: var(--blue4);
            border: none;
            border-top-right-radius: 15px;
            border-bottom-right-radius: 15px;
        }
        
        .searchbtn:hover {
            background-color: orange;
            cursor: progress;
        }
        
        .menubtn {
            display: none;
            background-color: var(--blue1);
            border: none;
        }
        
        .navbar-toggler-icon {
            color: white;
        }
        /* Navbar styles */
        
        body {
            background-color: #00A8CC;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            padding: 0;
        }
        
        .rowbox {
            width: 60%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            background-color: #00A8CC;
            margin: 20px;
            /* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); */
        }
        
        .row1 {
            width: 100%;
            padding: 10px;
            background-color: whitesmoke;
            border-radius: 5px;
        }
        
        .flowcontrol {
            display: flex;
            flex-direction: column;
            width: 100%;
            overflow-x: auto;
        }
        
        .chat {
            width: 35%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: whitesmoke;
            padding: 3px;
            border-radius: 5px;
            margin-right: 20px;
            margin-top: 30px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
        
        .chatinput {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
        }
        
        form {
            width: 70%;
        }
        
        .colbox1 {
            display: flex;
            flex-direction: column;
            width: 90%;
            padding: 3px;
            margin: 5px;
            background-color: whitesmoke;
            border-radius: 5px;
            /* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); */
        }
        
        .colbox2 {
            display: flex;
            flex-direction: column;
            width: 90%;
            padding: 3px;
            margin: 5px;
            background-color: whitesmoke;
            border-radius: 5px;
            /* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); */
        }
        
        hr {
            height: 1px;
            background-color: grey;
        }
        
        @media (max-width: 415px) {
            body {
                flex-direction: column;
                padding: 0;
            }
            .rowbox,
            .chat {
                width: 90%;
                margin-top: 20px;
            }
            .menubtn {
                display: block;
            }
            /* .colbox1,
            .colbox2 {
                width: 90%;
            } */
        }
    </style>
</head>

