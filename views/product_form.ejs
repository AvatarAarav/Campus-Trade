<body style="background-color: white;">
    <!-- <i class="fa-sharp fa-regular fa-handshake"></i> -->
    <%- include('./navbar.ejs',{user :user}); %>

        <div class="secondone">
            <h2><span style="color: white;">Object </span>Form</h2>
            <form id="object-form" method="POST" action="http://localhost:3000/api/form" enctype="multipart/form-data">
                <!-- <div class="form-group">
				<label for="id">ID:</label>
				<input type="text" class="form-control fc" id="id" name="id" required>
				<span class="error" id="id-error"></span>
			</div> -->
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control fc" id="name" name="name" required placeholder="Product Name">
                    <span class="error" id="name-error"></span>
                </div>
                <input type="hidden" name="email" value="<%=user.email%>" />
                <input type="hidden" name="password" value="<%=user.password%>" />
                <div class="form-group">
                    <label for="type">Type of Object:</label>
                    <input type="text" class="form-control fc" id="type" name="type" required placeholder="eg.Toy, Gadget, Accessory">
                    <span class="error" id="type-error"></span>
                </div>
                <div class="form-group">
                    <label for="type">Description of Object:</label>
                    <input type="text" class="form-control fc" id="description" name="description" required placeholder="Write something about the product...">
                    <span class="error" id="type-error"></span>
                </div>
                <div class="form-group">
                    <label for="age">How old:</label>
                    <small>eg.(2 years 5 months)</small>
                    <input type="text" class="form-control fc" id="age" name="age" required>
                    <span class="error" id="age-error"></span>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="text" class="form-control fc" id="price" name="price" required placeholder="Seller Price">
                    <span class="error" id="price-error"></span>
                </div>
                <div class="form-group">
                    <label for="image1">Image :</label>
                    <small>(please enter a clear image of the item)</small>
                    <input type="file" class="form-control fc-file" id="image" name="photo" required>
                    <span class="error" id="image1-error"></span>
                </div>






                <script>
                    const input = document.getElementById('image')

                    input.addEventListener('change', (event) => {
                        const target = event.target
                        if (target.files && target.files[0]) {

                            const maxAllowedSize = 0.1 * 1024 * 1024;
                            if (target.files[0].size > maxAllowedSize || !(target.files[0].name.match(/\.(jpg|jpeg|png|gif|JPG|JPEG|PNG|GIF)$/))) {
                                window.alert("please keep the file size less than 100 KB and enter a valid image")
                                target.value = ''
                            }
                        }
                    })
                </script>

                <button type="submit" class="btn" id="button2" style="background-color: orange; color:white;height: 40px;width: 100px; float: right; display: inline-block;border-radius: 10px;">Submit</button>
            </form>
        </div>






